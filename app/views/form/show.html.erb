<% provide(:xx ,"我的表单") %>
<h3 style="color: #B00100">
  <% flash.each do |name, msg| -%>
    <%= content_tag :div, msg, class: name %>
  <% end -%>
</h3>
<div  class="center hero-unit container">
<div>
<h1 style="color:rgb(149, 171, 182)">我的表单
</h1>

</div>
  <div class="input-group">
<%=form_tag controller:"form",action:"search_current",method: 'post',remote: true do %>
      <div class="form-group row">
        <label class="col-sm-1 control-label">搜索我的表单</label>
          <%= text_field_tag :form_name, params[:form_name], class:"form-control" %>
      </div>
      <div class="form-group row">
        <div class="col-sm-13">
          <%= submit_tag '搜索', class: 'btn btn-sm btn-primary' %>
        </div>
      </div>
<%end%>
  </div>
<div class="pull-left"><%= link_to '创建表单', new_path %>
</div>
<%= paginate(@forms) %>
<table class="table table-strip">
<tr>
    <th >表单名</th>
     <th >创建者</th>
    <th>创建时间</th>
    <th>更新时间</th>
    <th>填写份数</th>
    <th>开始时间</th>
    <th>结束时间</th>
    <th>状态</th>
    <th>动作</th>
        </tr>
     
<% @forms.each do |f| %>
        <tr>
        <td><%=  f.name %></td>
        <td> <%=f.user.name%></td>
        <td> <%=f.created_at%></td>
        <td><%=f.updated_at%></td>
         <td><%=f.form_users.count%></td>
         <td><%=f.start_at%></td>
         <td><%=f.end_at%></td>
          <%if Time.now > Time.parse(f.end_at) %>
            <td style="color: #B00100"> 已经过期  </td>
          <%elsif Time.now < Time.parse(f.start_at) %>
            <td style="color:#00BFFF"> 等待开始  </td>
          <%else%>
            <td style="color: #7FFF00"> 正在进行  </td>
          <%end%>
        <td><%= link_to '修改',edit_path(form_id:f.id,controller: 'form' , action: 'edit')%>
        <%= link_to '删除',del_path(form_id:f.id,controller: 'form' , action: 'del')%>
          <%if Time.now < Time.parse(f.end_at) && Time.now > Time.parse(f.start_at) %>
            <%= link_to '填写',fill_path(form_takon:f.takon,controller: 'form' , action: 'fill')%>
            <%end%>
    <%= link_to '查看数据',userdata_path(form_id:f.id,controller: 'form' , action: 'user_data')%></td>
        </tr>
<% end %>
</table>
<%= paginate(@forms) %>
</div>

